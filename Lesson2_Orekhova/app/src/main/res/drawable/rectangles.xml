<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <size
                android:width="100dp"
                android:height="100dp" />
            <padding
                android:bottom="40dp"
                android:top="0dp"
                android:left="0dp"
                android:right="40dp">
            </padding>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/red" />
            <size
                android:width="60dp"
                android:height="60dp" />
            <padding
                android:bottom="-40dp"
                android:top="40dp"
                android:left="40dp"
                android:right="-40dp">
            </padding>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/green" />
            <size
                android:width="60dp"
                android:height="60dp" />
            <!--<corners android:radius="8dp" />-->
        </shape>
    </item>
</layer-list>